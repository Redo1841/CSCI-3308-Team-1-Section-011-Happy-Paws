<html>
<head>

  <script src="https://kit.fontawesome.com/f673493116.js" crossorigin="anonymous"></script>
  <style type="text/css">

.fa-heart{
    color: rgb(0, 179, 255);;
    font-size: 12vh;
    
    cursor: pointer;
}

.fa-solid.fa-heart{
    animation: heartPulse;
    animation-duration: 0.3s;
    animation-iteration-count: 1;
}

@keyframes heartPulse{
    0%{
        scale: 1;
    }
    50%{
        scale: 1.1;
        color: rgb(0, 179, 255);;
    }
    100%{
        scale: 1;
    }
}

  </style>
  <script type="text/javascript">
 let favorite = 0;

function favoriteFunction1(){
    if (favorite == 0) {
    document.getElementById("favoriteHeart1").className = "fa-solid fa-heart";
    favorite = 1;
    } else {
    document.getElementById("favoriteHeart1").className = "fa-regular fa-heart";
    favorite = 0;
    }
};
function favoriteFunction2(){
    if (favorite == 0) {
    document.getElementById("favoriteHeart2").className = "fa-solid fa-heart";
